USER=discord

DIR=anchorAnalytics
DIR=/home/$USER/$DIR

EXEC=bot.py
EXEC=$DIR/$EXEC

ID=discord-bot-anchor-analytics
ID=/run/$ID.pid

COMMAND='start-stop-daemon'
COMMAND_ARGS="\
--start \
--chuid $USER \
--group $USER \
--chdir $DIR \
--make-pidfile \
--remove-pidfile \
--pidfile $ID \
--background \
--output $DIR/out.txt \
--exec $EXEC"

[Unit]
After=network.target

[Service]
ExecStart=$COMMAND $COMMAND_ARGS
